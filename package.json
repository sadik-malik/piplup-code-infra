{
  "name": "@piplup/code-infra",
  "version": "0.0.1",
  "description": "Infra scripts and configs to be used across Piplup",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/sadik-malik/piplup-code-infra.git"
  },
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    "./prettier": {
      "default": "./src/prettier.mjs"
    },
    "./eslint": {
      "default": "./src/eslint/index.mjs"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "eslint": "eslint . --cache --report-unused-disable-directives --ext .js,.ts,.tsx --max-warnings 0",
    "eslint:ci": "eslint . --report-unused-disable-directives --ext .js,.ts,.tsx --max-warnings 0",
    "prettier": "pretty-quick --ignore-path .lintignore",
    "prettier:all": "prettier --write . --ignore-path .lintignore",
    "typescript": "tsc -p tsconfig.json",
    "clean": "node scripts/clean.mjs"
  },
  "files": [
    "build",
    "src",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [],
  "author": "Sadik Malik",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@eslint/compat": "^1.3.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.38.0"
  },
  "peerDependencies": {
    "eslint": "^9.32.0",
    "prettier": "^3.6.2"
  },
  "devDependencies": {
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/estree": "^1.0.8",
    "@types/estree-jsx": "^1.0.5",
    "@types/node": "^24.1.0",
    "@types/semver": "^7.7.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/parser": "^8.38.0",
    "@typescript-eslint/rule-tester": "^8.38.0",
    "enquirer": "^2.4.1",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2",
    "typescript": "~5.7.3",
    "vitest": "^3.2.4",
    "yargs": "^18.0.0"
  }
}
